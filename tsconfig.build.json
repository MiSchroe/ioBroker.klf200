{
	"extends": "./tsconfig.json",
	// Modified config to only compile .ts-files in the src dir
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,
		"noEmit": false,
		"declaration": false
	},
	"include": ["src/**/*.ts", "./types/**/*.d.ts"],
	"exclude": ["src/**/*.test.ts", "src/*.test.ts", "test/**/*.ts", "test/**/*.js"]
}
