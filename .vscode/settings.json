{
	"typescript.tsdk": "node_modules/typescript/lib",
	"eslint.enable": true,
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[typescript]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": "explicit"
		}
	},
	"nodeTdd.reporter": "tap",
	"json.schemas": [
		{
			"fileMatch": ["**/jsonConfig.json"],
			"url": "https://github.com/ioBroker/adapter-react-v5/raw/main/schemas/jsonConfig.json"
		}
	],
	"mochaExplorer.files": "build/{**/*,*}.test.js",
	"mochaExplorer.require": ["test/mocha.setup.js", "source-map-support/register"],
	"mochaExplorer.watch": "build/{**/*,*}.js",
	"prettier.configPath": "./.prettierrc.js"
}

