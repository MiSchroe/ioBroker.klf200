{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha Tests:ts",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": ["--config", "test/mocharc.custom.json", "src/{**/*,*}.test.ts"],
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}/src/main.ts",
			"args": ["--debug", "0"],
			"preLaunchTask": "tsc: build - tsconfig.build.json",
			"outFiles": ["${workspaceFolder}/build/**/*.js"]
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Connection Test Component",
			"url": "http://localhost:4173",
			"webRoot": "${workspaceFolder}/src-admin"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Docker Adapter",
			"port": 9229,
			"address": "localhost",
			"timeout": 10000,
			"localRoot": "${workspaceFolder}",
			"remoteRoot": "/opt/iobroker/node_modules/iobroker.klf200",
			"outFiles": ["${workspaceFolder}/build/**/*.js"],
			"sourceMaps": true,
			"skipFiles": ["<node_internals>/**"],
			"trace": true
		}
	]
}
