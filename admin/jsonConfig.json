{
	"i18n": true,
	"type": "tabs",
	"tabsStyle": {
		"width": "calc(100% - 100px)"
	},
	"items": {
		"optionstab": {
			"type": "panel",
			"label": "optionstab",
			"sm": 2,
			"items": {
				"host": {
					"type": "text",
					"label": "host",
					"help": "host-help",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"password": {
					"type": "password",
					"label": "password",
					"help": "password-help",
					"maxLength": 32,
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"enableAutomaticReboot": {
					"newLine": true,
					"type": "checkbox",
					"label": "Enable automatic reboot",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"automaticRebootCronTime": {
					"type": "cron",
					"label": "Cron pattern for automatic reboot",
					"complex": true,
					"simple": true,
					"hidden": "!data.enableAutomaticReboot",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"testConnection": {
					"type": "custom",
					"url": "custom/customComponents.js",
					"name": "ConfigCustomKlf200Set/Components/ConnectionTestComponent",
					"newLine": true,
					"i18n": true,
					"xs": 12,
					"sm": 12,
					"md": 12,
					"lg": 12,
					"xl": 12
				}
			}
		},
		"SSL-tab": {
			"type": "panel",
			"label": "SSL-tab",
			"sm": 2,
			"items": {
				"SSLDescription": {
					"type": "staticText",
					"text": "SSL Description",
					"xs": 12,
					"sm": 12,
					"md": 12,
					"lg": 12,
					"xl": 12
				},
				"advancedSSLConfiguration": {
					"newLine": true,
					"type": "checkbox",
					"label": "Advanced SSL configuration",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"SSLFingerprint": {
					"type": "text",
					"label": "SSL Fingerprint",
					"hidden": "!data.advancedSSLConfiguration",
					"xs": 12,
					"sm": 12,
					"md": 6,
					"lg": 4,
					"xl": 4
				},
				"SSLPublicKey": {
					"newLine": true,
					"type": "text",
					"label": "SSL Public Key",
					"hidden": "!data.advancedSSLConfiguration",
					"minRows": 10,
					"xs": 12,
					"sm": 12,
					"md": 12,
					"lg": 12,
					"xl": 12
				}
			}
		},
		"DeviceManager-tab": {
			"type": "panel",
			"label": "DeviceManager-tab-label",
			"items": {
				"DeviceManager": {
					"type": "deviceManager",
					"sm": 12,
					"style": {
						"width": "100%",
						"height": "100%",
						"overflow": "hidden"
					}
				}
			},
			"style": {
				"width": "100%",
				"height": "100%",
				"overflow": "hidden"
			},
			"innerStyle": {
				"width": "100%",
				"height": "100%",
				"overflow": "hidden"
			}
		}
	}
}
